            <% } else { %>
            <td><%= pd['season']%></td>
            <% } %>
            <% if(!team){ %><td><a href="/teams/<%= pd['team']%>"><%= pd['team']%></a></td><% } %>
            <td><%= pd['games_played']%></td>
