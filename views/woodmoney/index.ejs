<div class="container-fluid" role="main">
    <div class="page-header">

        <h2><%= sub_title %></h2>

        <form class="x-wm-filters">
            <div class="row content" style="padding-bottom: 0">
                <div class="col">
                    Season :
                    <select id="season-input" name="season" style="visibility:hidden">
                        <option value="20182019" <% if(request.season === 20182019) { %> selected <% } %>>2018-19</option>
                        <option value="20172018" <% if(request.season === 20172018) { %> selected <% } %>>2017-18</option>
                        <option value="20162017" <% if(request.season === 20162017) { %> selected <% } %>>2016-17</option>
                        <option value="20152016" <% if(request.season === 20152016) { %> selected <% } %>>2015-16</option>
                        <option value="20142015" <% if(request.season === 20142015) { %> selected <% } %>>2014-15</option>
                    </select>
                </div>
                <div class="col-padded">
                    Competition :
                    <select name="competition" id="competition">
                        <option value="" <% if(!request.tier) { %>selected <% } %>>--select</option>
                        <option value="all" <% if(request.tier === "all") { %>selected <% } %>>All</option>
                        <option value="elite" <% if(request.tier === "elite") { %>selected <% } %>>Elite</option>
                        <option value="middle" <% if(request.tier === "middle") { %>selected <% } %>>Middle</option>
                        <option value="gritensity" <% if(request.tier === "gritensity") { %>selected <% } %>>Gritensity</option>
                    </select>
                </div>
                <div class="col-padded">
                    <input type="hidden" id="compSelect" value="All">
                    <input type="hidden" id="confSelect" value="All">
                    Forwards <input type="checkbox" id="pos-f" value="clr" <% if(request.selected_positions.f) { %>checked="checked" <% } %> style="margin-right:5px;" />
                    Centres <input type="checkbox" id="pos-c" name="positions" value="c" <% if(request.selected_positions.c) { %>checked="checked" <% } %>  style="margin-right:5px;" />
                    LW <input type="checkbox" id="pos-l" name="positions" value="l" <% if(request.selected_positions.l) { %>checked="checked" <% } %>  style="margin-right:5px;" />
                    RW <input type="checkbox" id="pos-r" name="positions" value="r" <% if(request.selected_positions.r) { %>checked="checked" <% } %>  style="margin-right:5px;" />
                    Defence <input type="checkbox" id="pos-d" name="positions" value="d" <% if(request.selected_positions.d) { %>checked="checked" <% } %>  />
                </div>
                <div class="col-padded">
                    <button type="button" class="btn btn-xs btn-success" id="CompSelectSubmit"><strong>Go</strong></button>
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-md-12">
            </div>
        </div>

    </div>
</div>

<!--Begin render table-->
<table id="puckiq" class="table table-bordered table-condensed table-hover" >
    <thead>
    <tr>
        <th>Player</th>
        <th>Pos</th>
        <% if(!team){ %><th>Team</th><% } %>
        <th data-sorter="false">Comp</th>
        <th data-sorter="false">GT</th>
        <th>TOI</th>

        <th>CTOI%</th>
        <th>CF</th>
        <th>CA</th>
        <th>CF%</th>
        <th>CF/60</th>

        <th>CA/60</th>
        <th>CF60RC</th>
        <th>CA60RC</th>
        <th>CF%RC</th>
        <th>DFF</th>

        <th>DFA</th>
        <th>DFF%</th>
        <th>DFF/60</th>
        <th>DFA/60</th>
        <th>DFF60RC</th>

        <th>DFA60RC</th>
        <th>DFF%RC</th>
        <th>GF</th>
        <th>GA</th>
        <th>GF%</th>

        <th>GF/60</th>
        <th>GA/60</th>
        <th>OZS%</th>
        <th>FO/60</th>
    </tr>
    </thead>
    <tbody id="dataTable">
    <%
    for (var i = 0; i < results.length; i++) {
        renderTableRow(results[i]);
    }
    %>
    </tbody>
</table>

<!--End render table-->
<div style="text-align: center">
    <a href="<%= download_url %>" class="x-download">download csv</a>
</div>

