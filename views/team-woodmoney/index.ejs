function renderTableRow(playerData) {
    var pd = playerData;
    var classname = 'pos-' + pd['ppossible'].toLowerCase() + ' woodmoney-' + pd['woodmoneytier'].toLowerCase() + ' hidden';
    %>
                    <tr class="<%= classname %>">
