  getDisplayType = function (rtdisplay, pqdisplay) {
    var show = false;
    if (typeof pqdisplay !== 'undefined') {
      if (pqdisplay.indexOf(rtdisplay) > -1)
        show = true;
    } else {
      show = true;
    }
    return show;
  };

  buildDataTable = function(id, filter, data) {
    var fields = [
      {
        apiVar: 'pinfo.pfullname',
        name: 'playername',
        dispName: 'Player Name',
